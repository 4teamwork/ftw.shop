<dl class="portlet portletCartsPortlet"
    i18n:domain="ftw.shop">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span i18n:translate="portletheader_cart">
           Cart
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd"
        tal:define="cview context/cart_view;
                    cart_items python:cview.cart_items().values()">
        
        <tal:emptycart condition="not:cart_items">
        <span i18n:translate="cart_is_empty">Your cart is empty</span>
        </tal:emptycart>

        <tal:cartcontents condition="cart_items">
        <ul>
        <tal:items repeat="item cart_items">
	        <li>
	            <a href="#" tal:content="item/title" /><br />
	            <span tal:replace="item/total" />
	            (<span tal:replace="item/quantity" />)
	        </li>
	    </tal:items>
	    </ul>
	    
	    <div class="cartTotal">Total: CHF <span tal:replace="cview/cart_total">100.00</span></div>
	    
	    <div class="cartActions">
	        <ul>
	            <li><a href="#" tal:attributes="href string:${cview/shop_url}/cart_edit"
	                            i18n:translate="label_edit_cart">Edit cart</a></li>
	            <li><a href="#" tal:attributes="href string:${cview/shop_url}/checkout-wizard"
	                            i18n:translate="label_checkout">Order</a></li>
	        </ul>
	    </div>
	    </tal:cartcontents>
	    
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>


</dl>