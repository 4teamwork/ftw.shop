     xmlns:tal="http://xml.zope.org/namespaces/tal"
     tal:omit-tag="">
<tal:block tal:repeat="item view/items">
  <input id="" name="" value="" class="hidden-widget" title=""
         tabindex="" accesskey=""
         type="hidden"
         tal:condition="item/checked"
