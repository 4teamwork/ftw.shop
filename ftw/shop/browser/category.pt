<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="ftw.shop">

<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
           tal:define="kssClassesView context/@@kss_field_decorator_view;
                       getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                       templateId template/getId;
                       description here/Description;
                       is_editable context/@@plone_context_state/is_editable">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <!-- <div class="overline" tal:content="context/getOverline" /> -->
        
        <h1 class="documentFirstHeading" tal:content="context/Title"> 
            <metal:field use-macro="python:here.widget('Title', mode='view')">
            Title
            </metal:field>
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <p tal:condition="python: not description and is_editable"
           i18n:translate="no_body_text"
           class="discreet">
            This item does not have any body text, click the edit tab to change it.
        </p>
        
        <metal:field use-macro="python:here.widget('description', mode='view')">
        Body text
        </metal:field>

        <tal:categories repeat="item view/categories">
        <div class="listItem">
        
            <div class="listItemImage" tal:condition="item/image">
                <a href="#" tal:attributes="href item/url">
                    <img src="" tal:replace="structure item/image" /></a>
            </div>
        
            <div class="listItemHeading">
                <h2><a href="#" tal:content="item/title" tal:attributes="href item/url" /></h2>
            </div>
        
            <p class="listItemBody">
                <span tal:replace="item/description" />
                <a href="#" tal:attributes="href item/url"
                            i18n:translate="label_more_link">More</a>
            </p>
            <div class="visualClear"><!-- --></div>
        </div>
        </tal:categories>
        <tal:shopitems repeat="item view/items">

        <div class="listItem">

            <div class="listItemImage" tal:condition="item/image">
                <a href="#" tal:attributes="href item/url">
                    <img src="" tal:replace="structure item/image" /></a>
            </div>
            <div class="listItemHeading">
                <h2><a href="#" tal:content="item/title" tal:attributes="href item/url" /></h2>
            </div>
            <p class="listItemBody">
                <span tal:replace="item/description" />
                <a href="#" tal:attributes="href item/url" i18n:translate="label_more_link">More</a>
            </p>
           
            <div class="listItemBody">
                <table class="shopItemTable" tal:condition="python: item['variants'] is None">
                    <tr>
                        <th i18n:translate="label_order_number">Order number</th>
                        <th colspan="2" i18n:translate="">Price</th>
                    </tr>
                    <tr>
                        <td tal:content="item/order_number" />
                        <td tal:content="item/price" />
                        <td><a href="#" class="addToCartLink"
                               tal:attributes="href string:${item/addurl}"
                               i18n:translate="text_add_to_cart">Add to cart</a></td>
                    </tr>
                </table>
                
            </div>
            
            <tal:block tal:define="varConf item/varConf" tal:condition="varConf">

            <div class="variation-details" tal:repeat="varValue1 varConf/getVariation1Values">
              <h2 tal:content="varValue1">Red</h2>
              <table>
              <thead>
              <tr>
                <th tal:content="python: varConf.getVariationAttributes()[1]">Size</th>
                <th>Price</th><th>Stock</th><th>SKU Code</th>
              </tr>
              </thead>
              <tbody>
                <tal:block tal:repeat="varValue2 varConf/getVariation2Values">
                <tr tal:define="active python:varConf.getVariationData(varValue1, varValue2, 'active');
                                skuCode python:varConf.getVariationData(varValue1, varValue2, 'skuCode');
                                price python:varConf.getVariationData(varValue1, varValue2, 'price');
                                stock python:varConf.getVariationData(varValue1, varValue2, 'stock')"
                    tal:condition="active">
                  <td tal:content="varValue2">S</td>
                  <td><span tal:content="price"/></td>
                  <td><span tal:content="stock"/></td>
                  <td><span tal:content="skuCode"/></td>
                  <td>
                      <form tal:attributes="action string:${item/url}/addtocart">
                      <input type="hidden" name="skuCode" tal:attributes="value skuCode"/>
                      <input type="text" size="2" name="quantity:int" value="1"/>
                      <input type="submit" value="Add to cart"/>
                      </form>
                  </td>
                </tr>
                </tal:block>
                </tbody>
              </table>

            </div>
            </tal:block>
        
            <div class="visualClear"><!-- --></div>    
    
        </div>
        </tal:shopitems>
        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>

