<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="ftw.shop">

      <style type="text/css">
      label { width: 10em; float: left; }
      label.error { float: none; color: red; padding-left: .5em; vertical-align: top; font-size: 70%; position: absolute;}
      p { clear: both; }
      .submit { margin-left: 12em; }
      em { font-weight: bold; padding-right: 1em; vertical-align: top; }
      form#variations td {
          padding: 5px;
          padding-top: 10px;
      }
      form#variations fieldset legend {
          font-size: 120%;
      }
      </style>


<body metal:use-macro="here/main_template/macros/master">

  <div metal:fill-slot="main">
    <div>

        <h1 class="documentFirstHeading" tal:content="context/Title"> 
            <metal:field use-macro="python:here.widget('Title', mode='view')">
            Title
            </metal:field>
        </h1>

          <form id="variations" method="post"
          tal:attributes="action python:here.absolute_url() + '/edit_variations'"
          tal:define="varConf python:view.getVariationsConfig()">

            <fieldset tal:repeat="varValue1 varConf/getVariation1Values">
              <legend><strong tal:content="varValue1">Red</strong></legend>
              <table>
              <thead>
              <tr>
                <th></th><th></th><th>Price</th><th>Stock</th>
                <th>SKU Code 
                    <span class="required" title="Erforderlich" style="color: #f00;">&#x25a0;</span>
                </th>
              </tr>
              </thead>
              <tbody>
                <tr tal:repeat="varValue2 varConf/getVariation2Values">
                  <td tal:content="varValue2">S</td>
                  <td><input type="checkbox"
                      tal:attributes="name string:${varValue1}-${varValue2}-active:boolean;
                                      checked python:varConf.getVariationData(varValue1, varValue2, 'active')"></td>
                  <td><input type="text" class="number"
                      tal:attributes="name string:${varValue1}-${varValue2}-price;
                                      value python:varConf.getVariationData(varValue1, varValue2, 'price')"></td>
                  <td><input type="text" class="number" 
                      tal:attributes="name string:${varValue1}-${varValue2}-stock:int;
                                      value python:varConf.getVariationData(varValue1, varValue2, 'stock')"></td>
                  <td><input type="text" class="required uniqueSkuCode"
                      tal:attributes="name string:${varValue1}-${varValue2}-skuCode:required;
                                      value python:varConf.getVariationData(varValue1, varValue2, 'skuCode')">
                  </td>
                </tr>
                </tbody>
              </table>


            </fieldset>
            <input type="submit">
            <input type="hidden" name="form.submitted:boolean" value="True" />
          </form>

          <script type="text/javascript" src="http://dev.jquery.com/view/trunk/plugins/validate/jquery.validate.js"></script>
          <script>
          jQuery.validator.addMethod("uniqueSkuCode", 
                function(value, element) {
                    other_sku_fields = jq('.uniqueSkuCode').not(element);
                    var existing_sku_codes = new Array(0);
                    for (var i=0; i<other_sku_fields.length; i++) {
                        existing_sku_codes.push(other_sku_fields[i].value);
                    }
                    if(jq.inArray(value, existing_sku_codes) > -1) {
                        return false; 
                        }
                    else { 
                        return true; 
                        }
                    }, 
                "SKU code must be unique");

          jq(document).ready(function($){
            $("#variations").validate();
          });
          </script>

    </div>

  </div>
</body>
</html>