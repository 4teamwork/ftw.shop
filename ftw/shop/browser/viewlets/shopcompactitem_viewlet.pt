<tal:def i18n:domain="ftw.shop">
    <tal:shopitems repeat="item view/getItemDatas">

        <div class="listItem">
            
            <div class="listItemImage" tal:condition="item/imageTag">
                <a href="#" tal:attributes="href item/url">
                <img src="" tal:replace="structure item/imageTag" /></a>
            </div>

            <div class="listItemHeading">
                <h2><a href="#" tal:content="item/title" tal:attributes="href item/url" /></h2>
            </div>

            <p class="listItemBody">
                <span tal:replace="item/description" />
                <a href="#" tal:attributes="href item/url" i18n:translate="label_more_link">More</a>
            </p>

            <div class="variation-toplevel-group" tal:condition="item/hasVariations" tal:define="varConf item/varConf">
                <form tal:attributes="action string:${item/url}/addtocart">
                   <fieldset>
                   <legend>Bestellung</legend>
                      <p>
                   <label>Farbe</label>
                   <select>
                    <option tal:repeat="varValue1 varConf/getVariation1Values" tal:content="varValue1">Blau</option>
	            </select>
	            </p>
	            <p>
                <label>Gr√∂sse</label>
				<select>
                    <option tal:repeat="varValue2 varConf/getVariation2Values" tal:content="varValue2">S</option>
	            </select>
	            </p>
	            <p>
	            <label>Menge</label>
	            <input name="quantity:int" type="text" value="0" size="2" />
	            </p>
                         <p>
		        <input type="submit" value="Add to cart" />
                </p>
                     </fieldset>
                 </form>

             </div>
          
         </div>
     </tal:shopitems>
</tal:def>
