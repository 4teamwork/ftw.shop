<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:zcml="http://namespaces.zope.org/zcml">


	<browser:viewletManager
	    name="ftw.shop.listing"
	    provides="...interfaces.IShopListing"
	    permission="zope2.View"
	    class="plone.app.viewletmanager.manager.OrderedViewletManager"
        layer="ftw.shop.interfaces.IFtwShopSpecific"
	    />

    <browser:viewlet
        name="ftw.shop.shopitem"
        manager="...interfaces.IShopListing"
        class=".viewlets.ShopItemListingViewlet"
        permission="zope2.View"
        />

	<browser:viewletManager
	    name="ftw.shop.compact_listing"
	    provides="...interfaces.IShopCompactListing"
	    permission="zope2.View"
	    class="plone.app.viewletmanager.manager.OrderedViewletManager"
        layer="ftw.shop.interfaces.IFtwShopSpecific"
	    />

    <browser:viewlet
        name="ftw.shop.shopitem_compact"
        manager="...interfaces.IShopCompactListing"
        class=".viewlets.ShopItemCompactListingViewlet"
        permission="zope2.View"
        />

</configure>
