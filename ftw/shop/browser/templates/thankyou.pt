<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="ftw.shop">
<body metal:use-macro="here/main_template/macros/master">

	<metal:main fill-slot="main">
		<tal:main-macro metal:define-macro="main">
		    
		    <h1 i18n:translate="msg_thank_you_title">Thank you!</h1>
		
		    <p i18n:translate="msg_thank_you_message">Order submitted</p>

		    <p i18n:translate="msg_thank_you_info"></p>
		    
		    <p i18n:translate="msg_thank_you_orderno">
		    Your order number:
		    <b i18n:name="order_number" tal:content="request/order_id|nothing"></b>
		    </p>
		
		</tal:main-macro>
	</metal:main>
</body>
</html>
