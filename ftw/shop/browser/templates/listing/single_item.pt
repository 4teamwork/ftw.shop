            <!-- Single Item with no Variations -->
            <tal:block tal:define="item options/item" i18n:domain="ftw.shop">
            <div class="listItemTable" tal:condition="not:item/hasVariations">
                <table class="shopItemTable">
                    <tr>
                        <th i18n:translate="label_sku_code">SKU code</th>
                        <th tal:condition="python: item['price'] != '0.00'" colspan="2" i18n:translate="label_price">Price</th>
                    </tr>
                    <tr>
                        <td tal:content="item/skuCode" />
                        <td tal:condition="python: item['price'] != '0.00'" tal:content="item/price" />

                    </tr>
                </table>

                <form tal:attributes="action string:${item/url}/addtocart">
                    <span style="float: right">
                        <input type="hidden" name="skuCode" tal:attributes="value item/skuCode"/>
                        <label>Menge</label>
                        <input type="text" size="2" name="quantity:int" value="1"/>
                        <input name="addtocart" type="submit" value="Add to cart" i18n:attributes="value" />
                    </span>
                </form>
                <br/><br/>
            </div>
            </tal:block>