<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="ftw.shop">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
           tal:define="kssClassesView context/@@kss_field_decorator_view;
                       getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                       templateId template/getId;
                       is_editable context/@@plone_context_state/is_editable;
                       desc here/description|nothing;
                       text here/getText|nothing">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <!-- <div class="overline" tal:content="context/getOverline" /> -->
        
        <h1 class="documentFirstHeading" tal:content="context/Title"> 
            <metal:field use-macro="python:here.widget('Title', mode='view')">
            Title
            </metal:field>
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <!-- <div class="shopItemDescription">
            <metal:field use-macro="python:here.widget('description', mode='view')">
            Body text
            </metal:field>
            <br/><br/>
        </div> -->

        <div tal:replace="structure provider:plone.abovecontentbody" />
        
        
        <div tal:replace="structure provider:ftw.shop.listing" />
        

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>

