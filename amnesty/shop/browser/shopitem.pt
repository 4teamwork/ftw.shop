<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
           tal:define="kssClassesView context/@@kss_field_decorator_view;
                       getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                       templateId template/getId;
                       text here/getText;">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <div class="overline" tal:content="context/getOverline" />
        
        <h1 class="documentFirstHeading"> 
            <metal:field use-macro="python:here.widget('realTitle', mode='view')">
            Title
            </metal:field>
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <p tal:condition="python: not text and is_editable"
           i18n:translate="no_body_text"
           class="discreet">
            This item does not have any body text, click the edit tab to change it.
        </p>

        <metal:field use-macro="python:here.widget('text', mode='view')">
        Body text
        </metal:field>

        <table class="shopItemTable" tal:define="item view/item" tal:condition="item">
            <tr>
                <th i18n:translate="label_order_number">Order number</th>
                <th colspan="2" i18n:translate="">Price</th>
            </tr>
            <tr>
                <td tal:content="item/order_number" />
                <td tal:content="item/price" />
                <td><a href="#" class="addToCartLink"
                       tal:attributes="href string:${item/url}"
                       i18n:translate="text_add_to_cart">Add to cart</a></td>
            </tr>
        </table>
         
        <tal:itemvariants define="items view/items" tal:condition="items">    
        <table class="shopItemTable" tal:define="items view/items" tal:repeat="vkey python:items.keys()">
            <tr>
                <th i18n:translate="label_order_number">Order number</th>
                <th tal:content="vkey">Label</th>
                <th colspan="2" i18n:translate="">Price</th>
            </tr>
            <tal:items define="mitems python:items[vkey]" repeat="mitem mitems">
            <tr>
                <td tal:content="mitem/order_number" />
                <td tal:content="mitem/title" />
                <td tal:content="mitem/price" />
                <td><a href="#" class="addToCartLink"
                       tal:attributes="href string:${mitem/url}"
                       i18n:translate="text_add_to_cart">Add to cart</a></td>
            </tr>
            </tal:items>
        </table>
        </tal:itemvariants>
            
        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>

