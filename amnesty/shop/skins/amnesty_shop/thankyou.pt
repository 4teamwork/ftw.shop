<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="amnesty.shop">
<body metal:use-macro="here/main_template/macros/master">

<metal:main fill-slot="main">
<tal:main-macro metal:define-macro="main">

    <ul class="wizard-steps">    
        <li class="wizard-step-link" i18n:translate="">
            Customer Information
        </li>
        <li class="wizard-step-link" i18n:translate="">
            Summary
        </li>
        <li class="wizard-step-link selected" i18n:translate="confirmation_step">
            Confirmation
        </li>
    </ul>
    
    <h1 i18n:translate="thank_you_title">Thank you!</h1>

    <p i18n:translate="thank_you_message">Order submited</p>
    
    <p i18n:translate="thank_you_info"></p>
    
    <p i18n:translate="thank_you_orderno">
    <b i18n:name="order_number" tal:content="request/order_id|nothing"></b>
    </p>

</tal:main-macro>
</metal:main>
</body>
</html>
