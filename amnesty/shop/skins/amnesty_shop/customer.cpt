<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="amnesty">

<body metal:use-macro="here/main_template/macros/master">

<metal:main fill-slot="main">
<tal:main-macro metal:define-macro="main"
                tal:define="errors options/state/getI18NErrors">

    <ul class="wizard-steps">    
        <li class="wizard-step-link selected" i18n:translate="">
            Customer Information
        </li>
        <li class="wizard-step-link" i18n:translate="">
            Summary
        </li>
        <li class="wizard-step-link" i18n:translate="confirmation_step">
            Confirmation
        </li>
    </ul>

    <h1 i18n:translate="customer_information_title">Customer Information</h1>

    <div class="formLeft">
    
        <p i18n:translate="text_agb">
            Hinweis AGB
            <span i18n:name="link">
                <a href="#" target="_blank"
                   tal:define="link_agb python:here.translate('link_agb', domain='amnesty')"
                   tal:attributes="href string:$portal_url/$link_agb"
                   i18n:translate="here">hier</a>
            </span>
        </p>
    
        <p i18n:translate="text_foreign_orders">
            Bestellungen aus dem Ausland
        </p>
    	
    </div>
    
    <div class="formRight">
        <form action=""
              class="enableAutoFocus enableUnloadProtection"
              method="post"
              tal:attributes="action template_id">
          
      <div class="field"
           tal:define="error errors/title| nothing;
                       title request/title | nothing;"
           tal:attributes="class python:test(error, 'field error', 'field')">

        <label for="customer_title"
               i18n:translate="label_title">Title</label>

        <span class="fieldRequired" title="Required"
              i18n:attributes="title title_required;"
              i18n:translate="label_required">(Required)</span>

        <div tal:content="error">Validation error output</div>

		<select name="title"
		        id="customer_title"
				tal:define="fieldvalue python:here.getCustomerDefaults('title')">
		    <option value=""
				    tal:define="optionName python:here.translate('label_details_ms', domain='amnesty')"
				    tal:attributes="selected python:test(fieldvalue==optionName, 'selected', None);
				    							value optionName"
				    tal:content="optionName">optionName</option>
			<option value=""
				    tal:define="optionName python:here.translate('label_details_mr', domain='amnesty')"
				    tal:attributes="selected python:test(fieldvalue==optionName, 'selected', None);
				    							value optionName"
				    tal:content="optionName">optionName</option>
			<option value=""
				    tal:define="optionName python:here.translate('label_details_family', domain='amnesty')"
				    tal:attributes="selected python:test(fieldvalue==optionName, 'selected', None);
				    				value optionName"
				    tal:content="optionName">optionName</option>
			<option value=""
				    tal:define="optionName python:here.translate('label_details_firm', domain='amnesty')"
				    tal:attributes="selected python:test(fieldvalue==optionName, 'selected', None);
				    							value optionName"
				    tal:content="optionName">optionName</option>				    
		</select> 

      </div>

        <div class="field"
             tal:define="error errors/firstname| nothing;
                         fieldvalue python:here.getCustomerDefaults('firstname')"
             tal:attributes="class python:test(error, 'field error', 'field')">

            <label for="customer_firstname"
                   i18n:translate="label_firstname">First Name</label>

            <span class="fieldRequired" title="Required"
                  i18n:attributes="title title_required;"
                  i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>

            <input type="text"
                   name="firstname"
                   id="customer_firstname"
                   size="30"
                   tal:attributes="value fieldvalue;"
            />
        </div>

        <div class="field"
             tal:define="error errors/lastname| nothing;
                         fieldvalue python:here.getCustomerDefaults('lastname')"
             tal:attributes="class python:test(error, 'field error', 'field')">

            <label for="customer_lastname"
                   i18n:translate="label_lastname">Last Name</label>

            <span class="fieldRequired" title="Required"
                  i18n:attributes="title title_required;"
                  i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>

            <input type="text"
                   name="lastname"
                   id="customer_lastname"
                   size="30"
                   tal:attributes="value fieldvalue;"
            />
        </div>

        <div class="field"
             tal:define="error errors/email| nothing;
                         fieldvalue python:here.getCustomerDefaults('email')"
             tal:attributes="class python:test(error, 'field error', 'field')">

            <label for="customer_email"
                   i18n:translate="label_email">Email</label>

            <span class="fieldRequired" title="Required"
                  i18n:attributes="title title_required;"
                  i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>

            <input type="text"
                   name="email"
                   id="customer_email"
                   size="30"
                   tal:attributes="value fieldvalue;"
            />
        </div>

        <div class="field"
             tal:define="error errors/street| nothing;
                         fieldvalue python:here.getCustomerDefaults('street')"
             tal:attributes="class python:test(error, 'field error', 'field')">

            <label for="customer_street"
                   i18n:translate="label_street">Street/No.</label>

            <span class="fieldRequired" title="Required"
                  i18n:attributes="title title_required;"
                  i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>

            <input type="text"
                   name="street"
                   id="customer_street"
                   size="30"
                   tal:attributes="value fieldvalue;"
            />
        </div>

        <div class="field"
             tal:define="error errors/street2| nothing;
                         fieldvalue python:here.getCustomerDefaults('street2')"
             tal:attributes="class python:test(error, 'field error', 'field')">

            <label for="customer_street2"
                   i18n:translate="label_street2">Address 2</label>

            <div tal:content="error">Validation error output</div>

            <input type="text"
                   name="street2"
                   id="customer_street2"
                   size="30"
                   tal:attributes="value fieldvalue;"
            />
        </div>

        <div class="field"
             tal:define="error errors/zipcode| nothing;
                         fieldvalue python:here.getCustomerDefaults('zipcode')"
             tal:attributes="class python:test(error, 'field error', 'field')">

            <label for="customer_zipcode"
                   i18n:translate="label_zipcode">Zip Code</label>

            <span class="fieldRequired" title="Required"
                  i18n:attributes="title title_required;"
                  i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>

            <input type="text"
                   name="zipcode"
                   id="customer_zipcode"
                   size="6"
                   tal:attributes="value fieldvalue;"
            />
        </div>

        <div class="field"
             tal:define="error errors/city| nothing;
                         fieldvalue python:here.getCustomerDefaults('city')"
             tal:attributes="class python:test(error, 'field error', 'field')">

            <label for="customer_city"
                   i18n:translate="label_city">City</label>

            <span class="fieldRequired" title="Required"
                  i18n:attributes="title title_required;"
                  i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>

            <input type="text"
                   name="city"
                   id="customer_city"
                   size="30"
                   tal:attributes="value fieldvalue;"
            />
        </div>

<tal:comment replace="nothing">
        <div class="field"
             tal:define="error errors/country| nothing;
                         fieldvalue python:here.getCustomerDefaults('country')"
             tal:attributes="class python:test(error, 'field error', 'field')">

            <label for="customer_country"
                   i18n:translate="label_country">Country</label>

            <span class="fieldRequired" title="Required"
                  i18n:attributes="title title_required;"
                  i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>

            <select tal:define="countrytool here/portal_countryutils"
                    id="customer_country">
                <optgroup
                label="Western Europe"
                tal:repeat="area countrytool/listAreas"
                tal:attributes="label area/name">
                <option
                value="DE"
                tal:repeat="country area/countries"
                tal:content="country/name"
                tal:attributes="value country/isocc">Germany
                </option>
            </optgroup>
            </select>
        </div>
</tal:comment>

        <div class="field"
             tal:define="fieldvalue python:here.getCustomerDefaults('newsletter')">

             <input type="checkbox"
                    class="noborder"
                    name="newsletter"
                    id="customer_newsletter"
                    tal:attributes="checked python:test(fieldvalue, 'checked', None);"
              />
             <label for="customer_newsletter" i18n:translate="label_newsletter">Newsletter</label>
             <div i18n:translate="text_subscribe_newsletter">I would like to subscribe to the newsletter.</div>
        </div>

        <div class="field"
             tal:define="error errors/comments| nothing;
                         fieldvalue python:here.getCustomerDefaults('comments')"
             tal:attributes="class python:test(error, 'field error', 'field')">

            <label for="customer_comments"
                   i18n:translate="label_comments">Comments</label>

 		    <textarea name="comments" rows="6"
 		              id="customer_comments"
 		              tal:content="python:here.getCustomerDefaults('comments')">
		    </textarea>
		    
        </div>

      <div class="formControls">
        <input class="context"
               type="submit"
               name="form.button.next"
               value="Next"
               i18n:attributes="value label_next;" />
      </div>

    <input type="hidden" name="form.submitted" value="1" />

    <input tal:replace="structure context/@@authenticator/authenticator" />

    </form>
    </div>

    <div class="visualClear"><!-- --></div>

</tal:main-macro>
</metal:main>

</body>
</html>
